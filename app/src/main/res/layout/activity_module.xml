<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ModuleActivity">


    <TextView
        android:id="@+id/modules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="32dp"
        android:text="@string/modules"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/mod1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/back"
        android:layout_width="67dp"
        android:layout_height="52dp"
        android:layout_marginEnd="320dp"
        android:layout_marginRight="320dp"
        android:layout_marginBottom="512dp"
        android:background="@android:color/white"
        android:onClick="onBack"
        android:text="@string/back"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="40dp"
        android:text="@string/app_name"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/modules"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="@+id/back" />

    <Button
        android:id="@+id/mod1"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="36dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="onButtonClick"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/mod2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mod2"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="32dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="onButtonClick"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/mod3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mod3"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="32dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="onButtonClick"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/mod4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mod4"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="88dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="onButtonClick"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/pass1"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/pass"
        android:src="@drawable/green_tick"
        app:layout_constraintBottom_toTopOf="@+id/pass2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/mod1"
        app:srcCompat="@drawable/green_tick" />

    <ImageView
        android:id="@+id/pass2"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/pass"
        android:src="@drawable/green_tick"
        app:layout_constraintBottom_toTopOf="@+id/pass3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/mod1"
        app:srcCompat="@drawable/green_tick" />

    <ImageView
        android:id="@+id/pass3"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/pass"
        android:src="@drawable/green_tick"
        app:layout_constraintBottom_toTopOf="@+id/pass4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/mod1"
        app:srcCompat="@drawable/green_tick" />

    <ImageView
        android:id="@+id/pass4"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="88dp"
        android:contentDescription="@string/pass"
        android:src="@drawable/green_tick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/mod1"
        app:srcCompat="@drawable/green_tick" />

</android.support.constraint.ConstraintLayout>